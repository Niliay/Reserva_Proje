@model EntityLayer.Concrete.Rezervasyon
@{
    ViewData["Title"] = "YeniRezervasyon";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Rezervasyon Sayfası</h1>
<form method="post">
    <div class="form-group">
    @Html.Label("Otel")
    @Html.DropDownListFor(x=>x.TatilYerleri,(List<SelectListItem>)ViewBag.v,new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input type="text" asp-for="KisiSayisi" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="date" asp-for="RezervayonTarihi" class="form-control" />
    </div>
    <button class="btn btn-outline-success">Rezervasyon Yap</button>
</form>

