<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir yorum bırakın</h4>
    <p class="mb-4">
        İşaretli alanları doldurmanız gerekmektedir.
    </p>
    <form method="post" asp-action="YorumEkle" asp-controller="Yorumlar2">
        <div class="form-group">
            <textarea name="Yorumlar2Icerik" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">
            <div class="form-group col-lg-6">
                <input type="text" name="Yorumlar2Kullanıcı" class="form-control" placeholder="Adınız Soyadınız*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="OtelID" class="form-control" placeholder="Otel id*" required="">
            </div>
        </div>
        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>
