@model Reserva.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Reserva Rezervasyon</h5>
							<h3>HESAP OLUŞTURMA </h3>
							<p>
								Yerel kültürlerin zenginliğini keşfetmekten, lüks tatil köylerinde dinlenmeye kadar, 
								ihtiyaçlarınıza ve tercihlerinize uygun bir konaklama seçeneği bulabileceğinizden 
								emin olabilirsiniz.
							</p>
							<a href="index.html" class="read-more-1 btn">Hadi Başlayalım</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
						<p>Hemen ücretsiz hesap oluşturun</p>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Adınız</label>
							<input type="text"  asp-for="Isim"/>
							<span asp-validation-for="Isim" style="color:red" class="text-danger"> </span>
						</div>
						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text"  asp-for="Soyisim"/>
							<span asp-validation-for="Soyisim" style="color:red" class="text-danger"> </span>
						</div>
						<div class="form-input">
							<label>Kullanıcı adınız</label>
							<input type="text" asp-for="UserName" />
							<span asp-validation-for="UserName" style="color:red" class="text-danger"> </span>
						</div>
						<div class="form-input">
							<label>Mail</label>
							<input type="email" asp-for="Email" />
							<span asp-validation-for="Email" style="color:red" class="text-danger"> </span>
						</div>
						<div class="form-input">
							<label>Password</label>
							<input type="password" asp-for="Password"  />
							<span asp-validation-for="ConfirmPassword" style="color:red" class="text-danger"> </span>
						</div>
						<div class="form-input">
							<label>Şifre doğrulama</label>
							<input type="password" asp-for="ConfirmPassword" />
							<span asp-validation-for="Password" style="color:red" class="text-danger"> </span>
						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly">

						</div>

						<label class="container">
							Şartları Okudum <a href="#">Kabul Ediyorum</a> 
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Kayıt Ol</button>
					</form>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>